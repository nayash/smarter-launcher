<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- TODO support dark theme-->
    <style name="Theme.SmartLauncher" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextHeading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:textSize">@dimen/text_heading2</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextHeading3" parent="TextHeading2">
        <item name="android:textSize">@dimen/text_heading3</item>
    </style>

    <style name="TextHeading1" parent="TextHeading2">
        <item name="android:textSize">@dimen/text_heading1</item>
    </style>

    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="AppTitle" parent="TextBody">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_heading3</item>
        <!--<item name="fontFamily">sans-serif-medium</item>-->
    </style>

    <style name="TextBodyLargeWhite" parent="TextBody">
        <item name="android:textSize">@dimen/text_heading2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBodySmall" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBodyLight</item>
        <item name="android:textSize">@dimen/text_body_small</item>
    </style>
</resources>